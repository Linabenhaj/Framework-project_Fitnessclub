<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Import Colors -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Global Styles -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource OnBackground}" />
    </Style>

    <!-- Entry (MAUI correct: GEEN CornerRadius) -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource OnBackground}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Border voor afgeronde invoervelden -->
    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{StaticResource Border}" />
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeShape">
            <Setter.Value>
                <RoundRectangle CornerRadius="5" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="Padding" Value="20,10" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <!-- Custom Button Styles -->
    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource Button}">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource Button}">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
    </Style>

    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource Button}">
        <Setter Property="BackgroundColor" Value="{StaticResource Accent}" />
    </Style>

    <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource Button}">
        <Setter Property="BackgroundColor" Value="{StaticResource Warning}" />
    </Style>

    <Style x:Key="ErrorButton" TargetType="Button" BasedOn="{StaticResource Button}">
        <Setter Property="BackgroundColor" Value="{StaticResource Error}" />
    </Style>

    <!-- Text Styles -->
    <Style x:Key="HeaderText" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style x:Key="SubHeaderText" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="CaptionText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource Gray600}" />
    </Style>

</ResourceDictionary>
