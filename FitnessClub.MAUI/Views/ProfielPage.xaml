<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessClub.MAUI.Views.ProfielPage"
             Title="Mijn Profiel">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <Label Text="ðŸ‘¤ Mijn Profiel" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>

                <!-- Profiel Info -->
                <Frame CornerRadius="10" Padding="20" BackgroundColor="#F5F5F5">
                    <VerticalStackLayout Spacing="15">

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Naam:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding VolledigeNaam}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="E-mail:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding Email}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Telefoon:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding Telefoon}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Geboortedatum:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding Geboortedatum, StringFormat='{0:dd-MM-yyyy}'}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Abonnement:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding AbonnementNaam}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="Inschrijvingen:" FontAttributes="Bold" WidthRequest="120"/>
                            <Label Text="{Binding AantalInschrijvingen}"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <!-- Action Buttons -->
                <Button Text="âœï¸ Bewerken" 
                        Command="{Binding EditProfileCommand}"
                        IsVisible="{Binding IsNotEditing}"
                        BackgroundColor="#FF9800" 
                        TextColor="White"/>

                <Button Text="ðŸ’¾ Opslaan" 
                        Command="{Binding SaveProfileCommand}"
                        IsVisible="{Binding IsEditing}"
                        BackgroundColor="#4CAF50" 
                        TextColor="White"/>

                <Button Text="â¬…ï¸ Terug" 
                        Clicked="OnBackClicked"
                        BackgroundColor="#9E9E9E" 
                        TextColor="White"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>