<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessClub.MAUI.Views.AdminDashboardPage"
             Title="Admin Dashboard">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="25" Padding="20">

                <!-- Admin Header -->
                <Label Text="ðŸ‘‘ Admin Dashboard" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       TextColor="{StaticResource PrimaryColor}"/>

                <!-- Admin Stats -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                      ColumnSpacing="15" RowSpacing="15">

                    <!-- Total Users -->
                    <Frame Grid.Column="0" Grid.Row="0" 
                           CornerRadius="15" 
                           BackgroundColor="#4CAF50"
                           Padding="20"
                           HeightRequest="120">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Totaal Gebruikers" 
                                   TextColor="White" 
                                   FontAttributes="Bold"/>
                            <Label Text="0" 
                                   TextColor="White" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Total Lessons -->
                    <Frame Grid.Column="1" Grid.Row="0" 
                           CornerRadius="15" 
                           BackgroundColor="#2196F3"
                           Padding="20"
                           HeightRequest="120">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Totaal Lessen" 
                                   TextColor="White" 
                                   FontAttributes="Bold"/>
                            <Label Text="0" 
                                   TextColor="White" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Admin Actions -->
                    <Button Grid.Column="0" Grid.Row="1"
                            Text="ðŸ‘¥ Beheer Gebruikers"
                            BackgroundColor="#FF9800" 
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"/>

                    <Button Grid.Column="1" Grid.Row="1"
                            Text="ðŸ“‹ Beheer Lessen"
                            BackgroundColor="#9C27B0" 
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="50"/>
                </Grid>

                <!-- Logout Button -->
                <Button Text="ðŸšª Uitloggen" 
                        BackgroundColor="#F44336" 
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnLogoutClicked"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>