<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessClub.MAUI.Views.LoginPage"
             Title="Inloggen">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="30" 
                                 VerticalOptions="Center">

                <!-- Header -->
                <Label Text="ðŸ‹ï¸ FitnessClub" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"/>

                <Label Text="Log in om verder te gaan" 
                       HorizontalOptions="Center"/>

                <!-- Error Message -->
                <Frame IsVisible="{Binding ShowError}" 
                       CornerRadius="8" 
                       BackgroundColor="#FFEBEE" 
                       Padding="15">
                    <Label Text="{Binding ErrorMessage}" 
                           TextColor="#D32F2F"/>
                </Frame>

                <!-- Login Form -->
                <Frame CornerRadius="10" Padding="20" 
                       BackgroundColor="#F5F5F5">
                    <VerticalStackLayout Spacing="20" Padding="30,0">

                        <!-- Bestaande login controls -->
                        <Label Text="Email" />
                        <Entry Text="{Binding Email}" Keyboard="Email" />

                        <Label Text="Wachtwoord" />
                        <Entry Text="{Binding Password}" IsPassword="True" />

                        <Button Text="Inloggen" 
            Command="{Binding LoginCommand}"
            IsEnabled="{Binding IsNotBusy}" />

                        <!-- ERROR MESSAGE -->
                        <Label Text="{Binding ErrorMessage}" 
           IsVisible="{Binding ShowError}"
           TextColor="Red" />

                        <!-- NIEUWE TEST KNOPPEN -->
                        
                        <Button Text="ðŸ“‹ Demo Accounts" 
            Command="{Binding ShowDemoAccountsCommand}"
            BackgroundColor="LightGreen"
            Margin="0,10,0,0"/>

                        <!-- Bestaande knoppen -->
                        <Button Text="Registreren" 
            Command="{Binding NavigateToRegisterCommand}"
            BackgroundColor="Transparent"
            TextColor="Blue"/>

                        <Button Text="Doorgaan als gast" 
            Command="{Binding NavigateAsGuestCommand}"
            BackgroundColor="Transparent"
            TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Info -->
                <Label Text="Gebruik demo accounts om te testen" 
                       FontSize="12" 
                       HorizontalOptions="Center"
                       TextColor="Gray"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>