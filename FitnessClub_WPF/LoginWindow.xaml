<Window x:Class="FitnessClub.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Club - Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Fitness Club Login" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Gebruikersnaam:"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10" Height="25"/>

            <Label Content="Wachtwoord:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,15" Height="25"/>

            <Button Content="Inloggen" Click="btnLogin_Click" 
                    Height="30" Margin="0,0,0,10"/>

            <Button Content="Registreer" Click="btnRegister_Click" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>