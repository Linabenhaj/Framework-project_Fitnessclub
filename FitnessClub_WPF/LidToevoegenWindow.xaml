<Window x:Class="FitnessClub.WPF.LidToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuw Lid Toevoegen" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nieuw Lid Toevoegen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Naam:"/>
            <TextBox x:Name="txtNaam" Margin="0,0,0,10" Height="25"/>

            <Label Content="Voornaam:"/>
            <TextBox x:Name="txtVoornaam" Margin="0,0,0,10" Height="25"/>

            <Label Content="Geboortedatum:"/>
            <DatePicker x:Name="dpGeboortedatum" Margin="0,0,0,10" Height="25"/>

            <Label Content="Contactgegevens:"/>
            <TextBox x:Name="txtContact" Margin="0,0,0,20" Height="25"/>

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Opslaan" Click="btnOpslaan_Click" Margin="10,0" Padding="15,5" Width="100"/>
                <Button Content="Annuleren" Click="btnAnnuleren_Click" Margin="10,0" Padding="15,5" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>