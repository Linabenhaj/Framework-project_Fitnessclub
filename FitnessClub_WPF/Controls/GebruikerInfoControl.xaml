<UserControl x:Class="FitnessClub.WPF.Controls.GebruikerInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">

    <Border Background="#ecf0f1" BorderBrush="#bdc3c7" BorderThickness="1" 
            CornerRadius="5" Padding="10" Margin="5">
        <StackPanel>
            <TextBlock x:Name="NaamText" FontWeight="Bold" FontSize="14" Text="{Binding Naam}"/>
            <TextBlock x:Name="EmailText" FontSize="12" Text="{Binding Email}"/>
            <TextBlock x:Name="RolText" FontSize="12" FontStyle="Italic" Text="{Binding Rol}"/>
        </StackPanel>
    </Border>
</UserControl>