<Window x:Class="FitnessClub.WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nieuwe Gebruiker" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <Label Content="Voornaam:"/>
            <TextBox x:Name="txtVoornaam" Margin="0,0,0,10"/>

            <Label Content="Achternaam:"/>
            <TextBox x:Name="txtAchternaam" Margin="0,0,0,10"/>

            <Label Content="Email:"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <Label Content="Wachtwoord:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,15"/>

            <Button Content="Registreer" Click="btnRegister_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>