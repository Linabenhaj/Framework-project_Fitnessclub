<Window x:Class="FitnessClub.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Club" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Welkom bij Fitness Club" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2c3e50"
                           Margin="0,0,0,40"/>

                <Button Content="Inloggen als Admin" 
                        Click="AdminLogin_Click" 
                        Width="250" 
                        Height="45"
                        Margin="0,15"
                        FontSize="14"
                        Background="#3498db"
                        Foreground="White"/>

                <Button Content="Inloggen als Lid" 
                        Click="LidLogin_Click" 
                        Width="250" 
                        Height="45"
                        Margin="0,15"
                        FontSize="14"
                        Background="#2ecc71"
                        Foreground="White"/>

                <Button Content="Nieuw Lid Registreren" 
                        Click="Registreer_Click" 
                        Width="250" 
                        Height="45"
                        Margin="0,15"
                        FontSize="14"
                        Background="#e74c3c"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>