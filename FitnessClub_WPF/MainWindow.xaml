<Window x:Class="FitnessClub.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Club - Hoofdmenu" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2c3e50">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Fitness Club" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,50"/>

            <Button Content="Admin Login" 
                    Click="AdminLogin_Click"
                    Width="200" 
                    Height="45"
                    Margin="0,10"
                    FontSize="14"
                    Background="#e74c3c"
                    Foreground="White"
                    FontWeight="Bold"/>

            <Button Content="Lid Registreren" 
                    Click="LidRegistreer_Click"
                    Width="200" 
                    Height="45"
                    Margin="0,10"
                    FontSize="14"
                    Background="#27ae60"
                    Foreground="White"
                    FontWeight="Bold"/>

            <Button Content="Lid Login" 
                    Click="LidLogin_Click"
                    Width="200" 
                    Height="45"
                    Margin="0,10"
                    FontSize="14"
                    Background="#3498db"
                    Foreground="White"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>