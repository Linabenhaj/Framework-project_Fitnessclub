<Window x:Class="FitnessClub.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Club - Hoofdmenu" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2c3e50">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495e" Padding="10">
            <TextBlock Text="Fitness Club Management System" 
                       Foreground="White" 
                       FontSize="18"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Fitness Club" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            <StackPanel Orientation="Vertical" Width="250">
                <Button Content="👑 Admin Login" 
                        Click="AdminLogin_Click"
                        Height="50"
                        Margin="0,5"
                        FontSize="16"
                        Background="#e74c3c"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>

                <Button Content="👤 Lid Registreren" 
                        Click="LidRegistreer_Click"
                        Height="50"
                        Margin="0,5"
                        FontSize="16"
                        Background="#27ae60"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>

                <Button Content="🚶 Lid Login" 
                        Click="LidLogin_Click"
                        Height="50"
                        Margin="0,5"
                        FontSize="16"
                        Background="#3498db"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>

                <Button Content="ℹ️ Over dit programma" 
                        Click="About_Click"
                        Height="40"
                        Margin="0,20,0,0"
                        FontSize="14"
                        Background="#95a5a6"
                        Foreground="White"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495e" Padding="10">
            <TextBlock Text=".NET WPF Applicatie - Fitness Club © 2024" 
                       Foreground="#ecf0f1" 
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>