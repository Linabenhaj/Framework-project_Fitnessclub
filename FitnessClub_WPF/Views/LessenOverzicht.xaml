<UserControl x:Class="FitnessClub.WPF.Views.LessenOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Beschikbare Lessen" 
                   FontSize="18" FontWeight="Bold" Margin="10"/>

        <DataGrid Grid.Row="1" x:Name="LessenDataGrid" 
                  AutoGenerateColumns="False" Margin="10"
                  CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Les" Binding="{Binding Naam}" Width="120"/>
                <DataGridTextColumn Header="Beschrijving" Binding="{Binding Beschrijving}" Width="200"/>
                <DataGridTextColumn Header="Datum/Tijd" Binding="{Binding DatumTijd, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Duur (min)" Binding="{Binding Duur}" Width="80"/>
                <DataGridTextColumn Header="Max Deelnemers" Binding="{Binding MaxDeelnemers}" Width="100"/>
                <DataGridTemplateColumn Header="Actie" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Inschrijven" Click="Inschrijven_Click"
                                    Background="#27ae60" Foreground="White" Padding="5" Margin="2"
                                    Tag="{Binding Id}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Refresh" Click="Refresh_Click"
                    Background="#3498db" Foreground="White" Padding="15,8" Margin="5"/>
            <Button Content="Toon Mijn Inschrijvingen" Click="ToonInschrijvingen_Click"
                    Background="#9b59b6" Foreground="White" Padding="15,8" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>