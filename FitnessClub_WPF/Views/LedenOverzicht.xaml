<UserControl x:Class="FitnessClub.WPF.Views.LedenOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Leden Overzicht" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Lid Toevoegen" Click="BtnToevoegen_Click" Width="120" Margin="0,0,0,10" HorizontalAlignment="Left"/>

        
            <DataGrid x:Name="dgLeden" AutoGenerateColumns="False" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="200"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="250"/>
                    <DataGridTextColumn Header="Telefoon" Binding="{Binding Telefoon}" Width="150"/>
                    <DataGridTemplateColumn Header="Acties" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Bewerken" Click="BtnBewerken_Click" Margin="5,0" Padding="10,2"/>
                                    <Button Content="Verwijderen" Click="BtnVerwijderen_Click" Margin="5,0" Padding="10,2" Background="Red" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>