<UserControl x:Class="FitnessClub.WPF.Views.InschrijvingenOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Inschrijvingen Overzicht" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

      
        <TextBlock Grid.Row="0" Text="Inschrijvingen Beheer" 
                   FontSize="18" FontWeight="Bold" Margin="10"/>

           
            <DataGrid x:Name="dgInschrijvingen" AutoGenerateColumns="False" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Lid ID" Binding="{Binding LidId}" Width="80"/>
                    <DataGridTextColumn Header="Abonnement ID" Binding="{Binding AbonnementId}" Width="120"/>
                    <DataGridTextColumn Header="Start Datum" Binding="{Binding StartDatum, StringFormat=d}" Width="120"/>
                    <DataGridTextColumn Header="Eind Datum" Binding="{Binding EindDatum, StringFormat=d}" Width="120"/>
                    <DataGridTemplateColumn Header="Acties" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Bewerken" Click="BtnBewerken_Click" Margin="5,0" Padding="10,2"/>
                                    <Button Content="Verwijderen" Click="BtnVerwijderen_Click" Margin="5,0" Padding="10,2" Background="Red" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>