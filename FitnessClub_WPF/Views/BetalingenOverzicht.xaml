<UserControl x:Class="FitnessClub.WPF.Views.BetalingenOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Betalingen Overzicht" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

         
            <Button Content="Betaling Toevoegen" Click="BtnToevoegen_Click" Width="150" Margin="0,0,0,10" HorizontalAlignment="Left"/>

           
            <DataGrid x:Name="dgBetalingen" AutoGenerateColumns="False" Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Bedrag" Binding="{Binding Bedrag, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding Datum, StringFormat=d}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Betaald" Binding="{Binding IsBetaald}" Width="80"/>
                    <DataGridTextColumn Header="Inschrijving ID" Binding="{Binding InschrijvingId}" Width="100"/>
                    <DataGridTemplateColumn Header="Acties" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Bewerken" Click="BtnBewerken_Click" Margin="5,0" Padding="10,2"/>
                                    <Button Content="Verwijderen" Click="BtnVerwijderen_Click" Margin="5,0" Padding="10,2" Background="Red" Foreground="White"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>