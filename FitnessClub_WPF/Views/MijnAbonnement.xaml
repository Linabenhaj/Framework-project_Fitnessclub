<UserControl x:Class="FitnessClub.WPF.Views.MijnAbonnement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Mijn Abonnement" 
                   FontSize="18" FontWeight="Bold" Margin="10"/>

       
        <Border Grid.Row="1" Background="#f8f9fa" CornerRadius="5" 
                BorderBrush="#dee2e6" BorderThickness="1" Margin="10" Padding="15">
            <StackPanel>
                <TextBlock Text="Huidig Abonnement:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="AbonnementNaamText" FontSize="16" FontWeight="Bold" 
                           Foreground="#2c3e50" Margin="0,0,0,5" Text="Laden..."/>
                <TextBlock x:Name="AbonnementPrijsText" FontSize="14" Margin="0,0,0,5" Text="Laden..."/>
                <TextBlock x:Name="AbonnementOmschrijvingText" FontSize="12" 
                           Foreground="#6c757d" TextWrapping="Wrap" Margin="0,0,0,10" Text="Laden..."/>
                <TextBlock x:Name="AbonnementStatusText" FontSize="12" FontWeight="SemiBold" Text="Laden..."/>
            </StackPanel>
        </Border>

       
        <StackPanel Grid.Row="2" Margin="10">
            <TextBlock Text="Andere Abonnementen:" FontWeight="Bold" Margin="0,10,0,10"/>

           
            <ListView x:Name="AbonnementenListView" Height="150"
                      SelectionChanged="AbonnementenListView_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Naam" DisplayMemberBinding="{Binding Naam}" Width="100"/>
                        <GridViewColumn Header="Prijs" DisplayMemberBinding="{Binding Prijs, StringFormat='€ {0:0.00}'}" Width="80"/>
                        <GridViewColumn Header="Omschrijving" DisplayMemberBinding="{Binding Omschrijving}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Selecteer Abonnement" Click="WijzigAbonnement_Click"
                        Background="#3498db" Foreground="White" Padding="15,8" Margin="5"
                        x:Name="WijzigButton"/>
                <Button Content="Refresh" Click="Refresh_Click"
                        Background="#95a5a6" Foreground="White" Padding="15,8" Margin="5"/>
            </StackPanel>
        </StackPanel>

      
        <Border Grid.Row="3" Background="#ecf0f1" Padding="10">
            <TextBlock x:Name="StatusText" Text="Klaar" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>