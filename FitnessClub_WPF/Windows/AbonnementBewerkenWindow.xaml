<Window x:Class="FitnessClub.WPF.Windows.AbonnementBewerkenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abonnement Bewerken" Height="350" Width="400"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">
        <TextBlock Text="Abonnement Bewerken" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Naam:" Margin="0,10,0,5"/>
        <TextBox x:Name="NaamTextBox" Height="25"/>

        <TextBlock Text="Prijs:" Margin="0,10,0,5"/>
        <TextBox x:Name="PrijsTextBox" Height="25"/>

        <TextBlock Text="Looptijd (maanden):" Margin="0,10,0,5"/>
        <TextBox x:Name="LooptijdTextBox" Height="25"/>

        <TextBlock Text="Omschrijving:" Margin="0,10,0,5"/>
        <TextBox x:Name="OmschrijvingTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Opslaan" Click="Opslaan_Click" 
                    Background="#27ae60" Foreground="White" 
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
            <Button Content="Annuleren" Click="Annuleren_Click" 
                    Background="#e74c3c" Foreground="White"
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>