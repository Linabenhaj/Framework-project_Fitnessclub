<Window x:Class="FitnessClub.WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuw Lid Registreren" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="500">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Titel -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="Nieuwe Account Aanmaken" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Voornaam:" VerticalAlignment="Center" Margin="0,5"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="VoornaamTextBox" Height="30" Margin="10,5"/>

            <!-- Achternaam -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Achternaam:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="AchternaamTextBox" Height="30" Margin="10,5"/>

          
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="EmailTextBox" Height="30" Margin="10,5"/>

            
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Wachtwoord:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <PasswordBox Grid.Row="4" Grid.Column="1" x:Name="PasswordBox" Height="30" Margin="10,5"/>

            
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Bevestig Wachtwoord:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <PasswordBox Grid.Row="5" Grid.Column="1" x:Name="ConfirmPasswordBox" Height="30" Margin="10,5"/>

     
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Geboortedatum:" VerticalAlignment="Center" Margin="0,10,0,5"/>
            <DatePicker Grid.Row="6" Grid.Column="1" x:Name="GeboortedatumDatePicker" Height="30" Margin="10,5"/>

          
            <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,30">
                <Button Content="Registreer" 
                        Click="Registreer_Click" 
                        Width="100" 
                        Height="35" 
                        Margin="10"
                        FontWeight="Bold"/>
                <Button Content="Terug" 
                        Click="Terug_Click" 
                        Width="100" 
                        Height="35" 
                        Margin="10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>