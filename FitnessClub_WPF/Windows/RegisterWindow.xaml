<Window x:Class="FitnessClub.WPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registreren - Fitness Club" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="40" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                BorderBrush="#ddd" 
                BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Registreren bij Fitness Club" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2c3e50"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Voornaam:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="VoornaamTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Achternaam:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="AchternaamTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Geboortedatum:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="GeboortedatumPicker" Height="35" FontSize="14" Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="E-mail:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Wachtwoord:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Bevestig Wachtwoord:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="ConfirmPasswordBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>

                <Button Content="Registreren" 
                        Click="Registreer_Click" 
                        Width="250" 
                        Height="45"
                        Margin="0,15"
                        FontSize="14"
                        Background="#2ecc71"
                        Foreground="White"/>

                <Button Content="Terug naar Hoofdmenu" 
                        Click="Terug_Click" 
                        Width="250" 
                        Height="45"
                        Margin="0,15"
                        FontSize="14"
                        Background="#95a5a6"
                        Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>