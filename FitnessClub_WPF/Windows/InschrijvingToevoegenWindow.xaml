<Window x:Class="FitnessClub.WPF.Windows.InschrijvingToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inschrijving Toevoegen" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Inschrijving Toevoegen/Bewerken" FontSize="18" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Lid:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbLid" DisplayMemberPath="Voornaam" 
                     Margin="0,5,0,15"/>

            <TextBlock Text="Abonnement:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbAbonnement" DisplayMemberPath="Naam" 
                     Margin="0,5,0,15"/>

            <TextBlock Text="Start Datum:" FontWeight="Bold"/>
            <DatePicker x:Name="dpStartDatum" Margin="0,5,0,15"/>

            <TextBlock Text="Eind Datum:" FontWeight="Bold"/>
            <DatePicker x:Name="dpEindDatum" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Opslaan" Click="BtnOpslaan_Click" 
                       Background="Green" Foreground="White" 
                       Width="80" Margin="5"/>
                <Button Content="Annuleren" Click="BtnAnnuleren_Click" 
                       Background="Gray" Foreground="White"
                       Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>