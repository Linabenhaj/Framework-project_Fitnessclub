<Window x:Class="FitnessClub.WPF.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Over Fitness Club" 
        Height="450" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="WhiteSmoke">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#3498db" 
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ℹ️" 
                           FontSize="24"
                           Margin="0,0,15,0"/>
                <TextBlock Text="Over Fitness Club App" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock Text=".NET WPF Desktop Applicatie" 
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Ontwikkeld voor het .NET Frameworks project"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <Border BorderBrush="#bdc3c7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Background="White"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="📋 Functionaliteiten:"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <ListBox BorderThickness="0" 
                                 Background="Transparent">
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅ " FontWeight="Bold"/>
                                    <TextBlock Text="Gebruikersbeheer met rollen (Admin, Trainer, Lid)"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅ " FontWeight="Bold"/>
                                    <TextBlock Text="Abonnementen management"/>
                                </StackPanel>
                            </ListBoxItem>
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅ " FontWeight="Bold"/>
                                    <TextBlock Text="Lessen planning en inschrijvingen"/>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#bdc3c7" 
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Background="White">
                    <StackPanel>
                        <TextBlock Text="🏗️ Project Structuur:"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="1. FitnessClub.Models - Class Library" 
                                   Margin="5"/>
                        <TextBlock Text="2. FitnessClub.WPF - Desktop applicatie" 
                                   Margin="5"/>
                        <TextBlock Text="3. FitnessClub.Web - ASP.NET Core MVC website" 
                                   Margin="5"/>
                        <TextBlock Text="4. FitnessClub.API - REST API voor MAUI" 
                                   Margin="5"/>
                        <TextBlock Text="5. FitnessClub.MAUI - Mobile applicatie" 
                                   Margin="5"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="ℹ️ Deze WPF app is onderdeel van een groter .NET ecosysteem"
                           TextWrapping="Wrap"
                           FontStyle="Italic"
                           Foreground="#7f8c8d"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" 
                BorderBrush="#ecf0f1" 
                BorderThickness="0,1,0,0"
                Margin="0,15,0,0"
                Padding="10,15,10,5">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Studentenproject - Hogeschool" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="© 2024 - Alle rechten voorbehouden" 
                           HorizontalAlignment="Center"
                           FontSize="11"
                           Foreground="#95a5a6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>