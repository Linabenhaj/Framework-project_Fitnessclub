<Window x:Class="FitnessClub.WPF.Windows.BetalingToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Betaling Toevoegen" Height="400" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Betaling Toevoegen/Bewerken" FontSize="18" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Inschrijving:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbInschrijving" DisplayMemberPath="Id" 
                     Margin="0,5,0,15"/>

            <TextBlock Text="Bedrag:" FontWeight="Bold"/>
            <TextBox x:Name="txtBedrag" Margin="0,5,0,15"/>

            <TextBlock Text="Datum:" FontWeight="Bold"/>
            <DatePicker x:Name="dpDatum" Margin="0,5,0,15"/>

            <CheckBox x:Name="chkIsBetaald" Content="Betaald" 
                     FontWeight="Bold" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Opslaan" Click="BtnOpslaan_Click" 
                       Background="Green" Foreground="White" 
                       Width="80" Margin="5"/>
                <Button Content="Annuleren" Click="BtnAnnuleren_Click" 
                       Background="Gray" Foreground="White"
                       Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>