<Window x:Class="FitnessClub.WPF.Windows.LidInschrijvenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Inschrijven voor Les" Height="550" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lid Inschrijven voor Les" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Lid Selectie -->
        <TextBlock Grid.Row="1" Text="Selecteer Lid:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" x:Name="LedenComboBox" DisplayMemberPath="DisplayNaam" Height="35" Margin="0,25,0,15"/>

        <!-- Lid Naam -->
        <TextBlock Grid.Row="2" Text="Lid Naam:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBlock Grid.Row="2" x:Name="txtLidNaam" Margin="0,35,0,15" FontSize="14"/>

        <!-- Les Selectie -->
        <TextBlock Grid.Row="3" Text="Selecteer Les:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="3" x:Name="LessenComboBox" DisplayMemberPath="DisplayInfo" Height="35" Margin="0,25,0,15"/>

        <!-- Beschikbare Lessen DataGrid -->
        <TextBlock Grid.Row="4" Text="Beschikbare Lessen:" FontWeight="Bold" Margin="0,10,0,5"/>
        <DataGrid Grid.Row="4" x:Name="dgLessen" AutoGenerateColumns="False" Height="150" 
                  Margin="0,35,0,15" SelectionChanged="DgLessen_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="*"/>
                <DataGridTextColumn Header="Datum" Binding="{Binding StartTijd, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                <DataGridTextColumn Header="Trainer" Binding="{Binding Trainer}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Les Details -->
        <Border Grid.Row="5" Background="#f8f9fa" Padding="10" Margin="0,10" CornerRadius="5" BorderBrush="#dee2e6" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Les Details" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtLesInfo" Text="Selecteer een les om details te zien" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Validatie bericht -->
        <TextBlock Grid.Row="6" x:Name="ValidatieText" Foreground="#e74c3c" FontWeight="SemiBold" Margin="0,10" TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Inschrijven" Click="InschrijvenButton_Click" 
                    Background="#27ae60" Foreground="White" 
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
            <Button Content="Annuleren" Click="AnnulerenButton_Click" 
                    Background="#e74c3c" Foreground="White"
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>