<Window x:Class="FitnessClub.WPF.Windows.LidInschrijvenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Inschrijven voor Les" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Lid Inschrijven voor Les" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Lid Selectie -->
        <TextBlock Grid.Row="1" Text="Selecteer Lid:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="1" x:Name="LedenComboBox" DisplayMemberPath="DisplayNaam" Height="35" Margin="0,25,0,15"/>

        <!-- Les Selectie -->
        <TextBlock Grid.Row="2" Text="Selecteer Les:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="2" x:Name="LessenComboBox" DisplayMemberPath="DisplayInfo" Height="35" Margin="0,25,0,15"/>

        <!-- Les Details -->
        <Border Grid.Row="3" Background="#f8f9fa" Padding="10" Margin="0,10" CornerRadius="5" BorderBrush="#dee2e6" BorderThickness="1">
            <StackPanel>
                <TextBlock x:Name="LesDetailsText" Text="Selecteer een les om details te zien" FontSize="12" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Validatie bericht -->
        <TextBlock Grid.Row="4" x:Name="ValidatieText" Foreground="#e74c3c" FontWeight="SemiBold" Margin="0,10" TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Inschrijven" Click="InschrijvenClick" 
                    Background="#27ae60" Foreground="White" 
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
            <Button Content="Annuleren" Click="AnnulerenClick" 
                    Background="#e74c3c" Foreground="White"
                    Padding="15,8" Margin="5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>