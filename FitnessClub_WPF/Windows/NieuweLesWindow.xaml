<Window x:Class="FitnessClub.WPF.Windows.NieuweLesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Nieuwe Les Toevoegen" Height="710" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Les Naam label -->
            <RowDefinition Height="Auto"/>
            <!-- Les Naam input -->
            <RowDefinition Height="Auto"/>
            <!-- Beschrijving label -->
            <RowDefinition Height="Auto"/>
            <!-- Beschrijving input -->
            <RowDefinition Height="Auto"/>
            <!-- Start Datum label -->
            <RowDefinition Height="Auto"/>
            <!-- Start Datum input -->
            <RowDefinition Height="Auto"/>
            <!-- Start Tijd label -->
            <RowDefinition Height="Auto"/>
            <!-- Start Tijd input -->
            <RowDefinition Height="Auto"/>
            <!-- Eind Datum label -->
            <RowDefinition Height="Auto"/>
            <!-- Eind Datum input -->
            <RowDefinition Height="Auto"/>
            <!-- Eind Tijd label -->
            <RowDefinition Height="Auto"/>
            <!-- Eind Tijd input -->
            <RowDefinition Height="Auto"/>
            <!-- Max Deelnemers label -->
            <RowDefinition Height="Auto"/>
            <!-- Max Deelnemers input -->
            <RowDefinition Height="Auto"/>
            <!-- Validatie bericht -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Titel -->
        <TextBlock Grid.Row="0" Text="Nieuwe Les Toevoegen" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Les Naam -->
        <TextBlock Grid.Row="1" Text="Les Naam:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" x:Name="NaamTextBox" Margin="0,0,0,15" Height="25" FontSize="14"/>

        <!-- Beschrijving -->
        <TextBlock Grid.Row="3" Text="Beschrijving:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" x:Name="BeschrijvingTextBox" Height="80" TextWrapping="Wrap" 
                 Margin="0,0,0,15" FontSize="14" VerticalScrollBarVisibility="Auto"/>

        <!-- Start Datum -->
        <TextBlock Grid.Row="5" Text="Start Datum:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="6" x:Name="StartDatumPicker" Margin="0,0,0,10" Height="30" 
                    FontSize="14" SelectedDate="{x:Static system:DateTime.Today}">
            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>

        <!-- Start Tijd -->
        <TextBlock Grid.Row="7" Text="Start Tijd:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="8" x:Name="StartUurComboBox" SelectedIndex="8" Height="30" 
                  FontSize="14" Margin="0,0,0,15">
            <ComboBoxItem Content="08:00"/>
            <ComboBoxItem Content="09:00"/>
            <ComboBoxItem Content="10:00"/>
            <ComboBoxItem Content="11:00"/>
            <ComboBoxItem Content="12:00"/>
            <ComboBoxItem Content="13:00"/>
            <ComboBoxItem Content="14:00"/>
            <ComboBoxItem Content="15:00"/>
            <ComboBoxItem Content="16:00"/>
            <ComboBoxItem Content="17:00"/>
            <ComboBoxItem Content="18:00"/>
            <ComboBoxItem Content="19:00"/>
            <ComboBoxItem Content="20:00"/>
        </ComboBox>

        <!-- Eind Datum -->
        <TextBlock Grid.Row="9" Text="Eind Datum:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="10" x:Name="EindDatumPicker" Margin="0,0,0,10" Height="30" 
                    FontSize="14" SelectedDate="{x:Static system:DateTime.Today}">
            <DatePicker.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </DatePicker.Resources>
        </DatePicker>

        <!-- Eind Tijd -->
        <TextBlock Grid.Row="11" Text="Eind Tijd:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="12" x:Name="EindUurComboBox" SelectedIndex="9" Height="30" 
                  FontSize="14" Margin="0,0,0,15">
            <ComboBoxItem Content="09:00"/>
            <ComboBoxItem Content="10:00"/>
            <ComboBoxItem Content="11:00"/>
            <ComboBoxItem Content="12:00"/>
            <ComboBoxItem Content="13:00"/>
            <ComboBoxItem Content="14:00"/>
            <ComboBoxItem Content="15:00"/>
            <ComboBoxItem Content="16:00"/>
            <ComboBoxItem Content="17:00"/>
            <ComboBoxItem Content="18:00"/>
            <ComboBoxItem Content="19:00"/>
            <ComboBoxItem Content="20:00"/>
            <ComboBoxItem Content="21:00"/>
        </ComboBox>

        <!-- Max Deelnemers -->
        <TextBlock Grid.Row="13" Text="Max Deelnemers:*" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox Grid.Row="14" x:Name="MaxDeelnemersTextBox" Text="20" Margin="0,0,0,15" 
                 Height="25" FontSize="14"/>

        <!-- Validatie bericht -->
        <TextBlock Grid.Row="15" x:Name="ValidatieText" Foreground="Red" FontWeight="Bold" 
                   Margin="0,0,0,15" TextWrapping="Wrap" Height="40"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="17" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuleren" Click="Annuleren_Click" 
                    Margin="0,0,10,0" Padding="15,8" Width="90" Height="35"
                    Background="#95a5a6" Foreground="White" FontWeight="Bold"/>
            <Button Content="Toevoegen" Click="Toevoegen_Click" 
                    Background="#27ae60" Foreground="White" 
                    Padding="15,8" Width="90" Height="35" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>