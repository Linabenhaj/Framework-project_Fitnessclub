<Window x:Class="FitnessClub.WPF.Windows.AbonnementToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abonnement Toevoegen" Height="300" Width="350"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">
        <TextBlock Text="Nieuw Abonnement" Style="{StaticResource HeaderStyle}"/>

        <TextBlock Text="Naam:" Margin="0,10,0,5"/>
        <TextBox x:Name="NaamTextBox"/>

        <TextBlock Text="Prijs:" Margin="0,10,0,5"/>
        <TextBox x:Name="PrijsTextBox"/>

        <TextBlock Text="Looptijd (maanden):" Margin="0,10,0,5"/>
        <TextBox x:Name="LooptijdTextBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Toevoegen" Click="ToevoegenClick" Style="{StaticResource SuccessButtonStyle}"/>
            <Button Content="Annuleren" Click="AnnulerenClick" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>