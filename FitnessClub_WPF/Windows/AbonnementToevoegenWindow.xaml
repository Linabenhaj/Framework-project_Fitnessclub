<Window x:Class="FitnessClub.WPF.Windows.AbonnementToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Abonnement Toevoegen" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Abonnement Toevoegen/Bewerken" FontSize="18" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Naam:" FontWeight="Bold"/>
            <TextBox x:Name="txtNaam" Margin="0,5,0,15"/>

            <TextBlock Text="Prijs:" FontWeight="Bold"/>
            <TextBox x:Name="txtPrijs" Margin="0,5,0,15"/>

            <TextBlock Text="Looptijd (maanden):" FontWeight="Bold"/>
            <TextBox x:Name="txtLooptijd" Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Opslaan" Click="BtnOpslaan_Click" 
                       Background="Green" Foreground="White" 
                       Width="80" Margin="5"/>
                <Button Content="Annuleren" Click="BtnAnnuleren_Click" 
                       Background="Gray" Foreground="White"
                       Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>