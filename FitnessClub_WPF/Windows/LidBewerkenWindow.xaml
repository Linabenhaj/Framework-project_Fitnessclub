<Window x:Class="FitnessClub.WPF.Windows.LidBewerkenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Bewerken" Height="350" Width="350"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="15">
        <TextBlock Text="Lid Bewerken" Style="{StaticResource HeaderStyle}"/>

        <TextBlock Text="Voornaam:" Margin="0,10,0,5"/>
        <TextBox x:Name="VoornaamTextBox"/>

        <TextBlock Text="Achternaam:" Margin="0,10,0,5"/>
        <TextBox x:Name="AchternaamTextBox"/>

        <TextBlock Text="Email:" Margin="0,10,0,5"/>
        <TextBox x:Name="EmailTextBox"/>

        <TextBlock Text="Telefoon:" Margin="0,10,0,5"/>
        <TextBox x:Name="TelefoonTextBox"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Opslaan" Click="OpslaanClick" Style="{StaticResource SuccessButtonStyle}"/>
            <Button Content="Annuleren" Click="AnnulerenClick" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>