<Window x:Class="FitnessClub.WPF.Windows.BewerkLidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Bewerken - Fitness Club" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Background="#f0f0f0">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="40" 
                    Margin="20"
                    BorderBrush="#ddd" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Lid Bewerken" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="#2c3e50"
                               Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Linkerkolom -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Voornaam:*" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="VoornaamTextBox" Height="35" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                            <TextBlock Text="Achternaam:*" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="AchternaamTextBox" Height="35" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                            <TextBlock Text="Geboortedatum:*" FontWeight="Bold" Margin="0,0,0,5"/>
                            <DatePicker x:Name="GeboortedatumPicker" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>
                        </StackPanel>

                        <!-- Rechterkolom -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="E-mail:*" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="EmailTextBox" Height="35" FontSize="14" Padding="10" Margin="0,0,0,15"/>

                            <TextBlock Text="Telefoon:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox x:Name="TelefoonTextBox" Height="35" FontSize="14" Padding="10" Margin="0,0,0,15"/>
                        </StackPanel>
                    </Grid>

                    <!-- ROLBEHEER SECTION -->
                    <Border Background="#f8f9fa" Padding="15" Margin="0,15" CornerRadius="5" BorderBrush="#dee2e6" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Rolbeheer" 
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       Margin="0,0,0,10" 
                                       Foreground="#2c3e50"/>

                            <TextBlock x:Name="HuidigeRolText" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,10"
                                       FontSize="13"
                                       Text="Huidige rol: Laden..."/>

                            <TextBlock Text="Nieuwe rol:" FontWeight="Bold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="RolComboBox" 
                                      Height="35" 
                                      FontSize="14"
                                      Padding="10"
                                      Margin="0,0,0,10">
                            </ComboBox>
                        </StackPanel>
                    </Border>

                    <!-- BLOKKEER SECTION -->
                    <Border Background="#f8f9fa" Padding="15" Margin="0,15" CornerRadius="5" BorderBrush="#dee2e6" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Account Status" 
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       Margin="0,0,0,10" 
                                       Foreground="#2c3e50"/>

                            <CheckBox x:Name="IsGeblokkeerdCheckBox" 
                                      Content="Gebruiker blokkeren (kan niet inloggen)"
                                      FontWeight="SemiBold"
                                      Checked="IsGeblokkeerdCheckBox_Changed"
                                      Unchecked="IsGeblokkeerdCheckBox_Changed"
                                      Margin="0,0,0,10"/>

                            <TextBlock x:Name="BlokkeerStatusText" 
                                       FontWeight="Bold" 
                                       FontSize="13"
                                       Text="Status: Laden..."/>
                        </StackPanel>
                    </Border>

                    <!-- ABONNEMENT KEUZE SECTION -->
                    <Border Background="#f8f9fa" Padding="15" Margin="0,15" CornerRadius="5" BorderBrush="#dee2e6" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Abonnement:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#2c3e50"/>

                            <ComboBox x:Name="AbonnementenComboBox" 
                                      Height="40" 
                                      FontSize="14"
                                      Padding="10"
                                      Margin="0,0,0,10"
                                      SelectionChanged="AbonnementenComboBox_SelectionChanged">
                            </ComboBox>

                            <TextBlock x:Name="GekozenAbonnementText" 
                                       FontWeight="Bold" 
                                       Foreground="#27ae60" 
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Validatie bericht -->
                    <TextBlock x:Name="ValidatieText" 
                               Foreground="#e74c3c" 
                               FontWeight="SemiBold" 
                               Margin="0,10,0,15" 
                               TextWrapping="Wrap" 
                               FontSize="13"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                    <TextBlock Text="* Verplichte velden" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,15"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Annuleren" 
                                Click="Annuleren_Click" 
                                Width="200" 
                                Height="45"
                                Margin="0,0,20,0"
                                FontSize="14"
                                Background="#95a5a6"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>

                        <Button Content="Opslaan Wijzigingen" 
                                Click="Opslaan_Click" 
                                Width="200" 
                                Height="45"
                                FontSize="14"
                                Background="#2ecc71"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>