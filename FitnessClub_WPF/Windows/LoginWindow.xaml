<Window x:Class="FitnessClub.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inloggen" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <Border Background="White" 
                CornerRadius="10" 
                Padding="30" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"
                BorderBrush="#ddd" 
                BorderThickness="1"
                Width="400">
            <StackPanel>
                <TextBlock x:Name="TitleText" 
                           Text="Inloggen" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,5"/>
                <TextBox x:Name="EmailTextBox" Height="35" FontSize="14" Padding="5"/>

                <TextBlock Text="Wachtwoord:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="35" FontSize="14" Padding="5"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,30">
                    <Button Content="Inloggen" 
                            Click="Login_Click" 
                            Width="100" 
                            Height="35" 
                            Margin="10"
                            FontWeight="Bold"
                            Background="#3498db"
                            Foreground="White"/>
                    <Button Content="Terug" 
                            Click="Terug_Click" 
                            Width="100" 
                            Height="35" 
                            Margin="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>