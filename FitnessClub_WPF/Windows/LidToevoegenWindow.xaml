<Window x:Class="FitnessClub.WPF.Windows.LidToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Toevoegen" Height="500" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Lid Toevoegen/Bewerken" FontSize="18" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Voornaam:" FontWeight="Bold"/>
            <TextBox x:Name="txtVoornaam" Margin="0,5,0,15"/>

            <TextBlock Text="Achternaam:" FontWeight="Bold"/>
            <TextBox x:Name="txtAchternaam" Margin="0,5,0,15"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Margin="0,5,0,15"/>

            <TextBlock Text="Telefoon:" FontWeight="Bold"/>
            <TextBox x:Name="txtTelefoon" Margin="0,5,0,15"/>

            <TextBlock Text="Geboortedatum:" FontWeight="Bold"/>
            <DatePicker x:Name="dpGeboortedatum" Margin="0,5,0,15"/>

            <TextBlock Text="Abonnement:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbAbonnement" DisplayMemberPath="Naam" 
                     Margin="0,5,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Opslaan" Click="BtnOpslaan_Click" 
                       Background="Green" Foreground="White" 
                       Width="80" Margin="5"/>
                <Button Content="Annuleren" Click="BtnAnnuleren_Click" 
                       Background="Gray" Foreground="White"
                       Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>