<Window x:Class="FitnessClub.WPF.Windows.LidToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lid Toevoegen" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">

    <Grid Background="#f0f0f0" Margin="20">
        <Border Background="White" CornerRadius="10" Padding="30">
            <StackPanel>
                <TextBlock Text="Lid Toevoegen" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="#2c3e50"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Voornaam:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="VoornaamTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Achternaam:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="AchternaamTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Geboortedatum:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="GeboortedatumPicker" Height="35" FontSize="14" Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="E-mail:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Telefoon:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TelefoonTextBox" Height="35" FontSize="14" Padding="5" Margin="0,0,0,15"/>

                        <TextBlock Text="Abonnement:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="AbonnementComboBox" 
                                  Height="35" 
                                  FontSize="14" 
                                  Padding="5"
                                  DisplayMemberPath="Naam"
                                  SelectedValuePath="Id"
                                  Margin="0,0,0,15"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <Button Content="Opslaan" 
                            Click="Opslaan_Click" 
                            Width="120" 
                            Height="40"
                            FontSize="14"
                            Background="#27ae60"
                            Foreground="White"
                            Margin="0,0,10,0"/>

                    <Button Content="Annuleren" 
                            Click="Annuleren_Click" 
                            Width="120" 
                            Height="40"
                            FontSize="14"
                            Background="#e74c3c"
                            Foreground="White"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>