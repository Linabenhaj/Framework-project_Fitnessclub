<Window x:Class="FitnessClub.WPF.LoginFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="250" Width="350"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Inloggen" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <Label Content="Gebruikersnaam:"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,10"/>

            <Label Content="Wachtwoord:"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Inloggen" Click="btnLogin_Click" Margin="5,0" Padding="10,5"/>
                <Button Content="Annuleren" Click="btnCancel_Click" Margin="5,0" Padding="10,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>