<Window x:Class="FitnessClub.WPF.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Fitness Club" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Fitness Club Dashboard" 
                               Foreground="White" FontSize="20" FontWeight="Bold"/>
                    <TextBlock x:Name="EmailText" Foreground="#ecf0f1" FontSize="12"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Welkom, " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserNameText" Foreground="White" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Uitloggen" Click="Logout_Click" 
                            Background="#e74c3c" Foreground="White" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Margin="10" x:Name="MainTabControl">

            <!-- Profiel Tab -->
            <TabItem Header="Profiel" x:Name="ProfielTab">
                <StackPanel Margin="20">
                    <TextBlock Text="Mijn Profiel" FontSize="18" FontWeight="Bold"/>
                    <TextBlock x:Name="ProfileInfoText" Margin="0,10" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>

            <!-- Admin Tabs -->
            <TabItem Header="Leden Beheer" x:Name="LedenTab" Visibility="Collapsed"/>
            <TabItem Header="Abonnementen" x:Name="AbonnementTab" Visibility="Collapsed"/>
            <TabItem Header="Inschrijvingen" x:Name="InschrijvingenTab" Visibility="Collapsed"/>
            <TabItem Header="Lessen" x:Name="LessenTab" Visibility="Collapsed"/>

            <!-- Lid Tabs -->
            <TabItem Header="Mijn Abonnement" x:Name="MijnAbonnementTab" Visibility="Collapsed"/>
            <TabItem Header="Mijn Inschrijvingen" x:Name="MijnInschrijvingenTab" Visibility="Collapsed"/>
            <TabItem Header="Beschikbare Lessen" x:Name="LessenLidTab" Visibility="Collapsed"/>

        </TabControl>

        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <TextBlock x:Name="FooterRoleText" Text="Fitness Club Management Systeem" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>