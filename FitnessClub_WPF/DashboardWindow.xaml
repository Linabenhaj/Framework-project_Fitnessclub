<Window x:Class="FitnessClub.WPF.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FitnessClub.WPF.Views"
        Title="Dashboard - Fitness Club" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Fitness Club Dashboard" 
                           Foreground="White" FontSize="20" FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Welkom, " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="UserNameText" Foreground="White" FontWeight="Bold" 
                               VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Uitloggen" Click="Logout_Click" 
                            Background="#e74c3c" Foreground="White" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>


        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Profiel" x:Name="ProfielTab">
                <StackPanel>
                    <TextBlock Text="Mijn Profiel" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock Text="Hier komt profiel informatie..." Margin="10"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Leden Beheer" x:Name="LedenTab" Visibility="Collapsed">
                <views:LedenOverzicht/>
            </TabItem>

          
            <TabItem Header="Abonnementen" x:Name="AbonnementTab" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Mijn Abonnement" Style="{StaticResource HeaderStyle}"/>
                    <TextBlock Grid.Row="1" Text="Abonnement informatie..." 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            
            <TabItem Header="Instellingen" x:Name="InstellingenTab">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Instellingen" Style="{StaticResource HeaderStyle}"/>
                    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Opslaan" Style="{StaticResource SuccessButtonStyle}"/>
                        <Button Content="Reset" Style="{StaticResource ButtonStyle}"/>
                    </StackPanel>
                    <TextBlock Text="Instellingen content..." HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
            </TabItem>
        </TabControl>
        <Border Grid.Row="2" Background="#ecf0f1" Padding="10">
            <TextBlock x:Name="RoleInfoText" Text="Rol: " HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>