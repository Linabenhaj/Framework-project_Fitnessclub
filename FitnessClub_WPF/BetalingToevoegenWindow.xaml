<Window x:Class="FitnessClub.WPF.BetalingToevoegenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Betaling Toevoegen" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Nieuwe Betaling Toevoegen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Label Content="Lid:"/>
            <ComboBox x:Name="cmbLid" Margin="0,0,0,10" Height="25"/>

            <Label Content="Bedrag:"/>
            <TextBox x:Name="txtBedrag" Margin="0,0,0,10" Height="25"/>

            <Label Content="Datum:"/>
            <DatePicker x:Name="dpDatum" Margin="0,0,0,20" Height="25"/>

            <Label Content="Omschrijving:"/>
            <TextBox x:Name="txtOmschrijving" Margin="0,0,0,20" Height="25"/>

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Opslaan" Click="btnOpslaan_Click" Margin="10,0" Padding="15,5" Width="100"/>
                <Button Content="Annuleren" Click="btnAnnuleren_Click" Margin="10,0" Padding="15,5" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>