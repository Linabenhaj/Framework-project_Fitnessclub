@model FitnessClub.Web.PaginatedList<FitnessClub.Models.Models.Les>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Lessen"];
}

<div class="container mt-4">
    <h1 class="mb-4">@Localizer["Lessen Overzicht"]</h1>

    <!-- Search and Filter -->
    <form asp-action="Index" method="get" class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" name="searchString"
                       value="@ViewData["CurrentFilter"]" placeholder="@Localizer["Zoek op lesnaam of trainer..."]" />
                <button class="btn btn-outline-primary" type="submit">
                    <i class="bi bi-search"></i> @Localizer["Zoeken"]
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" name="toekomstigeLessen"
                       value="true" @(ViewData["ToekomstigeLessen"] as bool? == true ? "checked" : "")
                       onchange="this.form.submit()">
                <label class="form-check-label">@Localizer["Alleen toekomstige lessen"]</label>
            </div>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> @Localizer["Nieuwe Les"]
            </a>
        </div>
    </form>

    <!-- Lessen Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Localizer["Naam"]</th>
                    <th>@Localizer["Trainer"]</th>
                    <th>@Localizer["Datum/Tijd"]</th>
                    <th>@Localizer["Locatie"]</th>
                    <th>@Localizer["Beschikbaar"]</th>
                    <th>@Localizer["Acties"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Naam</td>
                        <td>@item.Trainer</td>
                        <td>@item.StartTijd.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Locatie</td>
                        <td>
                            @{
                                var beschikbaar = item.MaxDeelnemers - (item.Inschrijvingen?.Count ?? 0);
                                var isVol = beschikbaar <= 0;
                            }
                            <span class="badge bg-@(isVol ? "danger" : "success")">
                                @beschikbaar / @item.MaxDeelnemers
                            </span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination toevoegen daarna -->
</div>
