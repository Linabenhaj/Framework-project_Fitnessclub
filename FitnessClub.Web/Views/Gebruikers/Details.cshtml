@model FitnessClub.Models.Models.Gebruiker

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gebruiker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Voornaam</dt>
        <dd class="col-sm-10">@Model.Voornaam</dd>

        <dt class="col-sm-2">Achternaam</dt>
        <dd class="col-sm-10">@Model.Achternaam</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefoon</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Geboortedatum</dt>
        <dd class="col-sm-10">
            @if (Model.Geboortedatum.HasValue)
            {
                @Model.Geboortedatum.Value.ToShortDateString()
            }
            else
            {
                <span>Niet opgegeven</span>
            }
        </dd>

        <dt class="col-sm-2">Leeftijd</dt>
        <dd class="col-sm-10">@Model.Leeftijd jaar</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Abonnement</dt>
        <dd class="col-sm-10">
            @if (Model.Abonnement != null)
            {
                <span>@Model.Abonnement.Naam - @Model.Abonnement.Prijs.ToString("C") / maand</span>
            }
            else
            {
                <span>Geen abonnement</span>
            }
        </dd>

        <dt class="col-sm-2">Rollen</dt>
        <dd class="col-sm-10">
            @if (ViewBag.Rollen != null && ((List<string>)ViewBag.Rollen).Any())
            {
                @string.Join(", ", ViewBag.Rollen)
            }
            else
            {
                <span>Geen rollen toegewezen</span>
            }
        </dd>

        <dt class="col-sm-2">Aangemaakt op</dt>
        <dd class="col-sm-10">@Model.AangemaaktOp.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Laatst gewijzigd</dt>
        <dd class="col-sm-10">@((Model.GewijzigdOp.HasValue ? Model.GewijzigdOp.Value.ToString("dd/MM/yyyy HH:mm") : "Nog niet gewijzigd"))</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
