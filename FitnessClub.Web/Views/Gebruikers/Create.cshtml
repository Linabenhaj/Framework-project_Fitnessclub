@model FitnessClub.Models.Models.Gebruiker

@{
    ViewData["Title"] = "Nieuwe Gebruiker";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="bi bi-person-plus"></i> Nieuwe Gebruiker</h1>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Voornaam" class="form-label"></label>
                            <input asp-for="Voornaam" class="form-control" />
                            <span asp-validation-for="Voornaam" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Achternaam" class="form-label"></label>
                            <input asp-for="Achternaam" class="form-control" />
                            <span asp-validation-for="Achternaam" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Wachtwoord</label>
                    <input name="Password" type="password" class="form-control" required />
                    <small class="text-muted">Minimaal 6 tekens</small>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Geboortedatum" class="form-label"></label>
                    <input asp-for="Geboortedatum" type="date" class="form-control" />
                    <span asp-validation-for="Geboortedatum" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label"></label>
                    <select asp-for="Rol" class="form-select">
                        <option value="">Selecteer rol...</option>
                        <option value="Lid">Lid</option>
                        <option value="PremiumLid">Premium Lid</option>
                        <option value="Trainer">Trainer</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Aanmaken
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Annuleren
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}