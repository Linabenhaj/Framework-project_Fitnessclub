<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- BELANGRIJK: Zet dit op false om te voorkomen dat VS automatisch AssemblyInfo.cs genereert -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    
    <!-- Optionele assembly metadata (als je dit in .csproj wilt houden) -->
    <Title>FitnessClub</Title>
    <Company>Your Company Name</Company>
    <Product>FitnessClub.Web</Product>
    <Description>Fitness Club Web Application</Description>
    <Copyright>Copyright Â© 2024</Copyright>
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- EF CORE - allemaal versie 9.0.0 voor consistentie -->
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="9.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="9.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    
    <!-- IDENTITY - allemaal versie 9.0.0 -->
    <PackageReference Include="Microsoft.AspNetCore.Identity.EntityFrameworkCore" Version="9.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Identity.UI" Version="9.0.0" />
    
    <!-- MVC & TOOLS -->
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="9.0.0" />
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="9.0.0" />
    
    <!-- DYNAMIC LINQ -->
    <PackageReference Include="System.Linq.Dynamic.Core" Version="1.7.1" />
    
    <!-- DIAGNOSTICS -->
    <PackageReference Include="Microsoft.AspNetCore.Diagnostics.EntityFrameworkCore" Version="9.0.0" />
    
    <!-- EXTRA: Voor Identity scaffolder indien nodig -->
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <!-- PROJECT REFERENCE -->
  <ItemGroup>
    <ProjectReference Include="..\FitnessClub.Models\FitnessClub.Models.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Views\Abonnementen\Talen\" />
  </ItemGroup>

  <!-- Voorkom dat er een AssemblyInfo.cs gegenereerd wordt in obj folder -->
  <Target Name="PreventAutoGeneratedAssemblyInfo" BeforeTargets="CoreCompile">
    <PropertyGroup>
      <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    </PropertyGroup>
  </Target>

</Project>